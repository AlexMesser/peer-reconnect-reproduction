{
  "compilerOptions": {
    "composite": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "_",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "NodeNext"
  }
}
